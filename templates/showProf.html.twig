{% extends "base.html.twig" %}
{% block title %}professeurs
{% endblock %}

{% block contentPage %}
	<h3 class="text-success">Liste des professeurs</h3>
	{% block page_contents %}
		<div class="container my-5">
			<div class="row ">
				<div class="col ">

					<table id="dataProf" class="table table-hover table-success table-striped" style="width:100%">


						<thead>
							<tr class="text-secondary">
								<th>Id</th>
								<th>nom and prenom</th>
								<th>CIN</th>
								<th>Telephone</th>
								<th>Email</th>

							</tr>
						</thead>
						<tbody>
							{% for prof in professeurs %}
								<tr>
									<td scope="row">{{prof.id}}</td>

									<td>{{prof.nom}}</td>
									<td>{{prof.cin}}</td>
									<td>{{prof.telephone}}</td>
									<td>{{prof.email}}</td>
								</tr>
							{% endfor %}
						</tbody>

					</table>
				</div>
			</div>
		</div>
		<script>
			$(document).ready(function () {
$('#dataProf').DataTable();
});
		</script>
	{% endblock %}
{% endblock %}
