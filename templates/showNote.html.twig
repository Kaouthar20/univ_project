{% extends "base.html.twig" %}

{% block title %}{% endblock %}
{% block body %}
	<div class="row my-5">
		<div class="col-md-8 mx-auto ">

			{% for message in app.flashes("success") %}
				<div class="alert alert-success">
					{{message}}
				</div>
			{% endfor %}
			<div class="card text-start|center|end">
				<table class="table ">


					<thead>
						<tr>
							<th>Id</th>
							<th>Note</th>
							<th>jour</th>
							<th>observation</th>
							<th>nom d'etudiant</th>

						</tr>
					</thead>
					<tbody>
						{% for note in notes %}
							<tr>
								<td scope="row">{{note.id}}</td>

								<td>{{note.note}}</td>
								<td>{{note.jour|date("Y-m-d")}}</td>
								<td>{{note.observation}}</td>
								<td>{{note.etudiant}}</td>
							</tr>
						{% endfor %}
					</tbody>

				</table>
			</div>
		</div>
	</div>

{% endblock %}
